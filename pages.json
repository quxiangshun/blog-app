{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				// 导航区域的字体颜色
				"navigationBarTextStyle":"white",
				"navigationBarBackgroundColor":"#345DC2",
				"disableScroll": false,
				// 开启下拉刷新
				"enablePullDownRefresh": false,
				// "backgroundTextStyle":"light",
				"navigationBarTitleText": "天韵戏曲",
				"app-plus": {
					// 关闭回弹效果，style: default下拉刷新会冲突，
					// "bounce": "none",
					// 原生下拉刷新
					// "pullToRefresh": {
					// 	"support": true,
					// 	"color":"#007AFF",
					// 	"style": "circle",
					// 	"offset": "50px"
					// },
					// 自定义导航配置
					"titleNView": {
						"searchInput": {
							// 默认不自动获取焦点
							"autoFocus": false,
							// 默认居中显示
							"align": "center",
							"backgroundColor": "#F0F1F2",
							// "backgroundColor": "#000",
							"borderRadius": "30rpx",
							// 提示信息
							"placeholder": "搜索你想要的内容",
							// 提示文本颜色
							"placeholderColor": "#979C9D",
							// 禁止输入，通过点击跳转到搜索页
							"disabled": true
						},
						//  #ifdef APP-PLUS
						"buttons": [{
							// 此处用的是Unicode方式，此处路径必须放在static下
							"fontSrc": "/static/icon/iconfont.ttf",
							// 不能直接使用Unicode，必须以\u开头，譬如：\ue123(注意不能写成\e123)
							"text": "\ue689",
							// 位置默认是右边
							"float": "right",
							"fontSize": "23",
							// "color": "rgba(0, 0, 0,0)",
							// 按钮全透明背景，结合"type":"transparent"使用
							"background": "rgba(0, 0, 0,0)"
						}],
						// #endif
						// 透明样式，顶部沉浸式显示(透明渐变)
						"type":"transparent"
					}
				}
			}
		}, {
			"path": "pages/category/category",
			"style": {
				"navigationBarTitleText": "分类",
				"navigationBarBackgroundColor":"#345DC2",
				"navigationBarTextStyle":"white",
				"app-plus": {
					"bounce":"none",
					"titleNView": {
						"buttons": [
							{
								"color": "#FFFFFF",
								"fontSize": "18",
								"fontSrc": "/static/icon/iconfont.ttf",
								"text": "\ue608"
							}
						]
					}
				}
			}

		}, {
			"path": "pages/article/article",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/question/question",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/my/my",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}

		},
		{
			// web浏览器组件
            "path" : "pages/public/web-view",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false,
				"app-plus": {
					// 禁止回弹效果
					"bounce": "none"
				}
            }
            
        }
        ,{
            "path" : "pages/search/search",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
				"app-plus": {
					"bounce":"none",
					"titleNView": {
						// 隐藏左侧返回按钮（APP）
						"autoBackButton": false,
						"searchInput": {
							"align": "left",
							"placeholder":"搜索你想要的内容",
							"borderRadius":"30rpx",
							"backgroundColor":"#F0F1F2"
						},
						"buttons": [
							{
								"float":"right",
								"text":"取消",
								"fontSize":16,
								"color":"#2A333B"
							}
						]
					}
				}
            }
            
        },
		{
			// 课程详情页
            "path" : "pages/course/course-details",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "navigationBarBackgroundColor": "#345DC2",
				"navigationBarTextStyle":"white",
				"onReachBottomDistance": 0, // 页面上拉触底事件触发时距离页面底部的距离，默认是50px，监听事件：onReachBottom
				"app-plus": {
					// 禁止回弹效果
					"bounce": "none",
					"scrollIndicator":"none", // 隐藏页面滚动条（APP）
					"titleNView": {
						"type":"transparent" //透明渐变
						// #ifdef APP-PLUS
						,"buttons": [
							{
								"type":"share" // uniapp提供好的分享按钮
							}
						]
						// #endif
					}
				}
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"list": [{
				"pagePath": "pages/index/index",
				"text": "首页",
				"iconPath": "/static/tab/index.png",
				"selectedIconPath": "static/tab/index-active.png"
			},
			{
				"pagePath": "pages/category/category",
				"text": "分类",
				"iconPath": "/static/tab/category.png",
				"selectedIconPath": "/static/tab/category-active.png"
			},
			{
				"pagePath":"pages/article/article",
				"text":"阅读",
				"iconPath":"/static/tab/article.png",
				"selectedIconPath":"/static/tab/article-active.png"
			},
			{
				"pagePath":"pages/question/question",
				"text":"问答",
				"iconPath":"/static/tab/question.png",
				"selectedIconPath":"/static/tab/question-active.png"
			},
			{
				"pagePath": "pages/my/my",
				"text": "我的",
				"iconPath": "/static/tab/my.png",
				"selectedIconPath": "/static/tab/my-active.png"

			}
		],
		// tab 上的文字默认颜色
		// "color": "#795DA3",
		// tab 上的文字选中时的颜色
		"selectedColor": "#007AFF",
		// tab 的背景色
		// "backgroundColor": "#669900",
		// tabbar 上边框的颜色，可选值 black/white
		"borderStyle": "black"
	}
}
